#include <iostream>
using namespace std;


int per() {
int M,B1,B2,B3,T1,T2,T3,tot,obt;
char N[16] ;
float per, avg;

    cout<<"***************************"<<endl;
    cout<<"Welcome to Result Finder"<<endl;
    cout<<"Enter your name: "<<endl;
    cin>>N;
    cout<<"Enter your class: "<<endl;
    cin>>M;
//book 1
    cout<<"obtain marks of Book 1: "<<endl;
    cin>>B1;
    cout<<"Total marks of Book 1: "<<endl;
    cin>>T1;
//book 2
    cout<<"obtain marks of Book 2: "<<endl;
    cin>>B2;
    cout<<"Total marks of Book 2: "<<endl;
    cin>>T2;
//book 3
    cout<<"obtain marks of Book 3: "<<endl;
    cin>>B3;
    cout<<"Total marks of Book 3: "<<endl;
    cin>>T3;
//total + obtain
    tot= T1+T2+T3;
    obt= B1+B2+B3;
//average
    avg= obt/3;
//percentage
    per= (obt*100)/tot;
    
    return 0;
}

int result(){//RESULT
int M,tot,obt;
char N[16] ;
float per, avg;


cout<<"Name of Student: "<<N<<"\tClass: "<<M<<"\nMarks Obtain: "<<obt<<"\nPercentage: "<<per<<"\nAverage Marks: "<<avg<<endl<<"\nHave a nice day.";
    

    return 0;
}

int main(){
    per();
    result();
    return 0;
}
